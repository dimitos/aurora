<footer class="footer">
    <section class="contact">
        <div class="scroll-top" id="contact"></div>
        <div class="contact__container">
            <div class="duo">
                <div class="duo__item">
                    <div id="map"></div>
                </div>
                <div class="duo__item">
                <div class="title title-bg contact__title-bg">Контакты</div>
                    <div class="contact__inner">
                        <h2 class="title title-1 contact__title">Контакты</h2>
                        <div class="contact__list">
                            <div class="contact__item contact__item-place">
                                <div class="contact__txt contact__subtitle">Адрес объекта:</div>
                                <div class="contact__txt contact__address">
                                    <span class="no-wrap">Республика Крым, </span>
                                    <span class="no-wrap">г. Ялта, </span>
                                    <span class="no-wrap">пгт. Восход, </span>
                                    <span class="no-wrap">ул. Авроры, 77</span>
                                </div>
                            </div>
                            <div class="contact__item contact__item-place">
                                <div class="contact__txt contact__subtitle">Адрес отдела продаж:</div>
                                <div class="contact__txt contact__address">
                                    <span class="no-wrap">г. Ялта, </span>
                                    <span class="no-wrap">пгт. Восход </span>
                                </div>
                            </div>
                            <div class="contact__item contact__item-phone">
                                <div class="contact__txt contact__subtitle">Телефон:</div>
                                <div class="contact__txt contact__address">
                                    <a href="{$phone->link}" class="link contact__link-phone">{$phone->title}</a>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-default btn-color-main js-request" data-from='Кнопка "Заказать звонок?" в футере сайта'>
                            <span class="btn__text">Заказать звонок</span>
                            <span class="btn__arrow"></span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</footer>
